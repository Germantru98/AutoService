@model AutoService.WEB.Models.UserRewiew

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="m-2">Оставьте ваш отзыв</h2>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">

        <textarea class="input-validation-error col-sm-10 col-md-10 col-lg-7 col-xl-6" data-val="true" data-val-required="Данное поле не может быть пустым" htmlattributes="{ class = form-control }" id="RewiewText" name="RewiewText" rows="10"></textarea>

        <div class="col-md-10">
            @Html.ValidationMessageFor(model => model.RewiewText, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="btn-group m-1 mb-2">
            <input type="submit" value="Добавить" class="btn btn-success" />
            <a class="btn btn-outline-secondary" href="/UserRewiews" role="button">Назад</a>
        </div>
    </div>
</div>
}