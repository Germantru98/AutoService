@model AutoService.WEB.Models.News
<div class="col-xl-5 col-md-7 col-sm-12 m-2">
    <div class="card mx-auto shadow-sm rounded">
        <div class="card-header bg-dark text-white">
            <h5 class="text-center">@Model.Title</h5>
        </div>
        <div class="card-body p-3">
            <div class="card-text border rounded p-2 overflow-auto" style="min-height:300px;max-height:400px;height:400px">
                @Model.NewsText
            </div>
            <div>
            </div>
            <div class="input-group text-right ml-auto mt-2 mb-2 col-xl-5 col-md-5 col-sm-4 p-0">
                <div class="input-group-prepend"><div class="input-group-text"><i class="fa fa-calendar p-1"></i>:</div></div><div class="form-control"> @Model.DateOfCreation.ToShortDateString()</div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a class="dialog btn btn-outline-danger" href="@Url.Action("RemoveNews","NewsPage", new {newsId = Model.Id})"><i class="fa fa-trash mr-1 p-1"></i>Удалить</a>
            <a class="btn btn-outline-dark" href="@Url.Action("EditNews","NewsPage", new { newsId = Model.Id})"><i class="fa fa-gear mr-1 p-1"></i>Изменить</a>
        </div>
    </div>
</div>