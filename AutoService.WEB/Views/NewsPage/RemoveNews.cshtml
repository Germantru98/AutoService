@using AutoService.WEB.Models
@model NewsView
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Удаление новости</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <h5 class="text-center align-self-center"><i class="fa fa-bookmark mr-1 p-1"></i>@Model.Title</h5>
    </div>
    <div class="modal-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <button class="btn btn-danger" type="submit"><i class="mr-1 p-1 fa fa-trash fa-lg"></i>Удалить</button>
            <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="mr-1 p-1 fa fa-window-close fa-lg"></i>Закрыть</button>
        }
    </div>
</div>
