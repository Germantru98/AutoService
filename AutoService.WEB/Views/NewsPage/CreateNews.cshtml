@using AutoService.WEB.Models
@model CreateNews
@using (Html.BeginForm("CreateNews", "NewsPage", FormMethod.Post, new { @class = "validate" }))
{
    @Html.AntiForgeryToken()
    <div class="col-xl-6 col-md-7 col-sm-12 mx-auto mt-4">
        <div class="card mx-auto">
            <div class="card-header bg-dark text-white">
                <h5 class="text-center">Создание новости</h5>
            </div>
            <div class="card-body">
                <div class="form-group ">
                    <i class="fa fa-bookmark mr-1 p-1"></i>@Html.LabelFor(model => model.Title, new { @class = "col-form-label" })
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <i class="fa fa-book mr-1 p-1"></i>@Html.LabelFor(model => model.NewsText, new { @class = "col-form-label" })
                    @Html.TextAreaFor(model => model.NewsText, new { @class = "form-control", rows = "10" })
                    @Html.ValidationMessageFor(model => model.NewsText, null, new { @class = "text-danger" })
                </div>
                <div class="form-group ">
                    <i class="fa fa-bookmark mr-1 p-1"></i>@Html.LabelFor(model => model.SlideTitle, new { @class = "col-form-label" })
                    @Html.EditorFor(model => model.SlideTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SlideTitle, null, new { @class = "text-danger" })
                </div>
                <div class="form-group ">
                    <i class="fa fa-bookmark mr-1 p-1"></i>@Html.LabelFor(model => model.SlideDescription, new { @class = "col-form-label" })
                    @Html.EditorFor(model => model.SlideDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SlideDescription, null, new { @class = "text-danger" })
                </div>
                <div class="form-group ">
                    <i class="fa fa-image mr-1 p-1"></i>@Html.LabelFor(model => model.ImgHref, new { @class = "col-form-label" })
                    @Html.EditorFor(model => model.ImgHref, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ImgHref, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="card-footer text-center">
                <button class="btn btn-outline-dark"><i class="fa fa-check mr-1 p-1"></i>Добавить</button>
                <a class="btn btn-outline-dark" href="@Url.Action("Index", "NewsPage")">
                    <i class="fa fa-home mr-1 p-1"></i>Назад
                </a>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}