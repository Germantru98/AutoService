@model AutoService.WEB.Models.ContactView
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="display-4">Контактная информация</h2>

<div class="row">
    <div class="col-xl-8">
        <div class="m-3 text-center p-2">
            <iframe src="@Model.YandexFrameSrc" class="w-75 h-75" frameborder="1" allowfullscreen="true" style="min-height:400px"></iframe>
            <h4 class="mt-3">@Model.Address</h4>
        </div>
    </div>
    <div class="col-xl-4 p-3">
        <dl class="text-md-center text-xl-left text-sm-center">
            <dt class="h4">Мы в соц сетях</dt>
            <dd>
                <a class="mr-2" href="@Model.VKHref"><img title="VK" src="@Model.VKImageHref" height="70" width="70"></a>
                <a class="mr-2" href="@Model.FacebookHref"><img title="Facebook" src="@Model.FacebookImageHref" height="70" width="70"></a>
                <a class="mr-2" href="@Model.InstagramHref"><img title="Instagram" src="@Model.InstagramImageHref" height="70" width="70"></a>
            </dd>
            <dt class="h4">
                Телефоны
            </dt>
            <dd>
                @foreach (var item in Model.ContactPhones)
                {
                <p>@item</p>
                }
            </dd>
            <dt class="h4">
                Почта
            </dt>
            <dd>
                @foreach (var item in Model.ContactEmails)
                {
                <a style="color:black" href="mailto:@item">@item</a><br />
                }
            </dd>
        </dl>
    </div>
</div>