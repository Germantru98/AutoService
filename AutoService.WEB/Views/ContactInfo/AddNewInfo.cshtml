@using AutoService.WEB.Models
@model AddNewContactView
@{
    ViewBag.Title = "Добавление новой контактной информации";
}
<div class="modal-content">
    <!-- Заголовок модального окна -->
    <div class="modal-header">
        <h5 class="modal-title">Контактная информация</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!-- Основное содержимое модального окна -->
    @using (Html.BeginForm("AddNewInfo", "ContactInfo", null, FormMethod.Post, new { @class = "validate" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-group">
                <label class="col-form-label">Тип информации:</label>
                @Html.DropDownListFor(model => model.Type, ViewBag.Types as SelectList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="col-form-label">Данные:</label>
                @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <!-- Футер модального окна -->
        <div class="modal-footer ">
            <button class="btn btn-outline-dark" type="submit"><i class="mr-1 p-1 fa fa-send"></i>Добавить</button>
            <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="mr-1 p-1 fa fa-window-close fa-lg"></i>Закрыть</button>
        </div>
    }
</div>
<script>
    $('.validate').validate({
        errorClass: "text-danger",
        rules: {
            Value: {
                required: true
            },
            Type: {
                required: true
            }
        },
        messages: {
            Value: {
                required: "Данное поле не может быть пустым"
            },
            Type: {
                required: "Данное поле не может быть пустым"
            }
        }
    });
</script>