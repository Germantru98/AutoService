@model AutoService.WEB.Models.ForgotPasswordViewModel

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h3 class="mt-3 text-center">Введите адрес электронной почты</h3>
    <div class="col-xl-5 mx-auto mt-3">
        <div class="card">
            <div class="card-header bg-dark text-white"><i class="fa fa-envelope mr-1 p-1"></i>@Html.LabelFor(m => m.Email, new { @class = "m-0" })</div>
            <div class="card-body">
                <div class="m-2">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="card-footer text-center">
                <button class="btn btn-dark" type="submit"><i class="fa fa-send mr-1 p-1"></i>Отправить</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}