@model AutoService.WEB.Models.SendCodeViewModel
@{
    ViewBag.Title = "Отправить";
}

<h2 class="text-center m-2">@ViewBag.Title.</h2>


<div class="col-xl-5 col-md-7 col-sm-12 mx-auto">
    <div class="card shadow-sm rounded">
        <div class="card-header bg-dark text-white text-center"><h5>Отправить проверочный код</h5></div>
        @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("rememberMe", @Model.RememberMe)
            <div class="card-body">
                <div class="form-group">
                    <label class="col-form-label">Выбор поставщика двухфакторной проверки подлинности:</label>
                    @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new { @class = "form-control" })
                </div>
            </div>
            <div class="card-footer">
                <button><i class="fa fa-send mr-1 p-1"></i>Отправить</button>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}