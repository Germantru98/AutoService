<div class="modal-content">
    <!-- Заголовок модального окна -->
    <div class="modal-header bg-warning">
        <h5 class="modal-title ">Вы уверенны, что хотите очистить корзину?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!-- Основное содержимое модального окна -->
    <div class="modal-body">
        <img class="img-fluid" src="https://webstockreview.net/images/clipart-food-fancy-12.png" alt="Alternate Text" />
    </div>
    <!-- Футер модального окна -->
    <div class="modal-footer bg-warning">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-danger"><i class="fa fa-trash-o fa-lg mr-1 p-1"></i>Очистить</button>
            <button type="button" class="btn btn-outline-dark" data-dismiss="modal"><i class="fa fa-window-close fa-lg mr-1 p-1"></i>Закрыть</button>
        }
    </div>
</div>