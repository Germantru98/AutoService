@model List<AutoService.WEB.Models.HomeMainCarouserlItem>

<div class="col-lg-7 col-sm-12 pl-0 ml-auto mb-2 pr-sm-0 mr-xl-1">
    <div id="carousel" class="carousel slide bg-dark" data-ride="carousel">
        <div class="carousel-inner ">
            <div class="carousel-item active">
                <img class="img-fluid w-100" src="@Model[0].ImageHref" alt="Image" title="@Model[0].Title">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@Model[0].Title</h5>
                    <p>@Model[0].Description</p>
                </div>
            </div>
            @for (int i = 1; i < Model.Count; i++)
            {
            <div class="carousel-item">
                <img class="img-fluid" src="@Model[i].ImageHref" alt="Image">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@Model[i].Title</h5>
                    <p>@Model[i].Description</p>
                </div>
            </div>
            }
        </div>
        @if (Model.Count > 1)
        {
            <!-- Элементы управления -->
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Предыдущий</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Следующий</span>
        </a>
        }
    </div>
</div>