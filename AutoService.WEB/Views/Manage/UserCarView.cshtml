@using AutoService.WEB.Models
@model CarView
<div class="col-xl-3 col-md-5 col-sm-10  mt-2 mb-2">
    <div class="card shadow-sm h-100">
        <div class="card-img-top">
            <img class="img-fluid" src="@Model.CarImageHref" alt="Alternate Text" />
        </div>
        <div class="card-body">
            <div class="card-text">
                <label class="mr-1"><i class="mr-1 p-1 fa fa-modx fa-lg"></i>Модель: </label> @Model.Model<br />
                <label class="mr-1"><i class="mr-1 p-1 fa fa-paint-brush fa-lg"></i>Цвет: </label> @Model.Color<br />
                <label class="mr-1"><i class="mr-1 p-1 fa fa-calendar fa-lg"></i> Год: </label>@Model.Year<br />
            </div>
        </div>
        <div class="card-footer d-flex">
            <div class="btn-group mx-auto">
                <a class="btn btn-sm btn-outline-dark dialog" style="width:110px" href="@Url.Action("EditCar","Manage",new {id = Model.CarId })">
                    <i class="fa fa-edit mr-1 p-1"></i>Изменить
                </a>
                <a class="btn btn-sm btn-outline-dark dialog" style="width:110px" href="@Url.Action("RemoveCar","Manage",new {id = Model.CarId})">
                    <i class="fa fa-trash-o mr-1 p-1"></i>Удалить
                </a>
            </div>
        </div>
    </div>
</div>
