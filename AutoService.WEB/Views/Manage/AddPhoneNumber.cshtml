@model AutoService.WEB.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Номер телефона";
}
<div class="modal-content">
    <!-- Заголовок модального окна -->
    <div class="modal-header">
        <h5 class="modal-title">@ViewBag.Title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!-- Основное содержимое модального окна -->
    @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { @class = "validate" }))
    {
        <div class="modal-body">

            @Html.AntiForgeryToken()
            <div class="form-group ">
                @Html.LabelFor(m => m.Number, new { @class = "col-form-label" })
                @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
            </div>

        </div>
        <!-- Футер модального окна -->
        <div class="modal-footer ">
            <button class="btn btn-success" type="submit"><i class="mr-1 p-1 fa fa-mobile-phone fa-lg"></i>Добавить</button>
            <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="mr-1 p-1 fa fa-window-close fa-lg"></i>Закрыть</button>
        </div>
    }
</div>
<script>
    $('.validate').validate({
        errorClass: "text-danger",
        rules: {
            Number: {
                required: true
            }
        },
        messages: {
            Number: {
                required: "Введите номер телефона",
            },
        }
    });
</script>