@using AutoService.WEB.Models
@model AddNewCarViewModel
<div class="modal-content">
    <!-- Заголовок модального окна -->
    <div class="modal-header">
        <h5 class="modal-title">Добавление нового автомобиля</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!-- Основное содержимое модального окна -->
    @using (Html.BeginForm("AddNewCar", "Manage", null, FormMethod.Post, new { @class = "validate" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal-body form-horizontal">
            <div class="form-group">
                <span><i class="fa fa-book fa-lg p-1 mr-1"></i></span>@Html.LabelFor(m => m.CarModel, new { @class = "col-form-label" })
                @Html.EditorFor(m => m.CarModel, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <span><i class="fa fa-paint-brush fa-lg p-1 mr-1"></i></span>@Html.LabelFor(m => m.CarColor, new { @class = "col-form-label" })
                @Html.EditorFor(m => m.CarColor, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <span><i class="fa fa-calendar fa-lg p-1 mr-1"></i></span> @Html.LabelFor(m => m.CarYear, new { @class = "col-form-label" })
                @Html.EditorFor(m => m.CarYear, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <!-- Футер модального окна -->
        <div class="modal-footer ">
            <button class="btn btn-success" type="submit"><i class="mr-1 p-1 fa fa-plus fa-lg"></i>Добавить</button>
            <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="mr-1 p-1 fa fa-window-close fa-lg"></i>Закрыть</button>
        </div>
    }
</div>
<script>
    $('.validate').validate({
        errorClass: "text-danger",
        rules: {
            CarModel: {
                required: true
            },
            CarColor: {
                required: true,
            },
            CarYear: {
                required: true
            }
        },
        messages: {
            CarModel: {
                required: "Поле с моделью автомобиля не может быть пустым",
            },
            CarColor: {
                required: "Поле с цветом автомобиля не может быть пустым",
            },
            CarYear: {
                required: "Поле с годом выпуска автомобиля не может быть пустым"
            }
        }
    });
</script>
