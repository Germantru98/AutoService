@model AutoService.WEB.Models.EditUserReviewView
<div class="modal-content">
    <!-- Заголовок модального окна -->
    <div class="modal-header">
        <h5 class="modal-title">Новый отзыв</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!-- Основное содержимое модального окна -->
    @using (Html.BeginForm("Edit", "UserReviews", FormMethod.Post, new { @class = "validate" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ReviewId)
        <div class="modal-body">
            <div class="form-group ">
                @Html.LabelFor(model => model.EditedText, htmlAttributes: new { @class = "col-form-label" })

                @Html.TextAreaFor(model => model.EditedText, new { @class = "form-control", rows = "10" })
            </div>
        </div>
        <!-- Футер модального окна -->
        <div class="modal-footer ">
            <button class="btn btn-primary" type="submit"><i class="mr-1 p-1 fa fa-save fa-lg"></i>Сохранить</button>
            <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="mr-1 p-1 fa fa-window-close fa-lg"></i>Закрыть</button>
        </div>
    }
</div>
<script>
    $('.validate').validate({
        errorClass: "text-danger",
        rules: {
            EditedText: {
                required: true,
                minlength: 20
            }
        },
        messages: {
            EditedText: {
                required: "Поле с отзывом пользователя не может быть пустым.",
                minlength: "Размер отзыва должен быть более 20 символов"
            }
        }
    });
</script>