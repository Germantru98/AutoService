@model AutoService.WEB.Models.CreateReviewView
<div class="modal-content">
    <!-- Заголовок модального окна -->
    <div class="modal-header">
        <h5 class="modal-title">Новый отзыв</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!-- Основное содержимое модального окна -->
    @using (Html.BeginForm("CreateReview", "UserReviews", FormMethod.Post, new { @class = "validate" }))
    {
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-group ">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "col-form-label" })

            @Html.TextAreaFor(model => model.Text, new { @class = "form-control", rows = "10" })
        </div>
    </div>
    <!-- Футер модального окна -->
    <div class="modal-footer ">
        <button class="btn btn-primary" type="submit"><i class="mr-1 p-1 fa fa-send-o fa-lg"></i>Отправить</button>
        <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="mr-1 p-1 fa fa-window-close fa-lg"></i>Закрыть</button>
    </div>
    }
</div>
<script>
    $('.validate').validate({
        errorClass: "text-danger",
        rules: {
            Text: {
                required: true,
                minlength: 20
            }
        },
        messages: {
            Text: {
                required: "Поле с отзывом пользователя не может быть пустым.",
                minlength: "Размер отзыва должен быть более 20 символов"
            }
        }
    });
</script>