@model PagedList.IPagedList<AutoService.WEB.Models.UserReview>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
@if (Model.Count>0)
{
    <div class="row row-cols-sm-1 row-cols-md-2 row-cols-xl-3 mt-4 ">
        @foreach (var review in Model)
        {
            @Html.Partial("UserReviewItem",review)
        }
    </div>
    <div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
}
else
{
    <h2>Пусто</h2>
}
@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Добавить отзыв", "CreateReview", null, new { @class = "btn btn-dark" })
    </p>
}

@section Scripts {
    @Scripts.Render("~/scripts/InvokeModalDialog.js")
}