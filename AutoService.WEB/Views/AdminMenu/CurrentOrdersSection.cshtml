@using AutoService.WEB.Models
@model List<ServicesSummaryAdminView>

<div class="row mt-3 p-2 justify-content-center ">
    <div class="m-1">
        @using (Ajax.BeginForm("GetAllUncompletedOrders", new AjaxOptions { UpdateTargetId = "results" }))
        {
            <button class="btn btn-dark btn-lg" type="submit">Все заказы</button>
        }
    </div>
    <div class="m-1">
        @using (Ajax.BeginForm("GetCurrentOrders", new AjaxOptions { UpdateTargetId = "results" }))
        {
            <button class="btn btn-dark btn-lg" type="submit">Текущие заказы</button>
        }
    </div>
</div>
<div id="results">
    @Html.Partial("SummariesBlockView", Model)
</div>