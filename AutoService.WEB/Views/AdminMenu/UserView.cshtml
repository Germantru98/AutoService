@model AutoService.WEB.Models.UserAdminView
<div class="col-5 border border-dark p-2 m-3 usercard">
    <dl>
        <dt>ФИО: <a title="удалить пользователя" href="#" class=" btn btn-danger btn-sm pb-2 close">&times;</a> </dt>
        <dd>
            @Model.UserRealName
        </dd>
        <dt>Почта:</dt>
        <dd>
            <a style="color:black" href="mailto:@Model.UserMail">@Model.UserMail</a>
        </dd>
        <dt>Номер телефона:</dt>

        @if (Model.PhoneNumber != null)
        {
        <dd>
            @Model.PhoneNumber
        </dd>

        }
        else
        {
        <dd>
            Отсутствует
        </dd>

        }
    </dl>
</div>