@model AutoService.WEB.Models.AdminMenuView
@{
    ViewBag.Title = "Меню администратора";
}

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
<h2 class="text-center m-2">Меню администратора</h2>

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#discount-section">Скидки</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#current-orders">Текущие заказы</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#archive">Архив</a>
    </li>
    <li>
        <a class="nav-link" data-toggle="tab" href="#news-tab">Новости</a>
    </li>
</ul>
<div class="tab-content">
    <div class="tab-pane fade show active" id="discount-section">
        @Html.Partial("DiscountsSection", Model.Discounts);
    </div>
    <div class="tab-pane fade" id="current-orders">
        @Html.Partial("CurrentOrdersSection", Model.CurrentOrders)
    </div>
    <div class="tab-pane fade" id="archive">
        @Html.Partial("ArchiveSection", Model.Archive)
    </div>
    <div class="tab-pane fade" id="news-tab">
        @Html.Partial("MainCarouselSection", Model.MainCarouselItems)
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
    @Scripts.Render("~/scripts/InvokeModalDialog.js")
    @Scripts.Render("~/scripts/jquery.validate.min.js")
    <script>
        $('.validate').validate({
            errorClass: "text-danger",
            rules: {
                Title: {
                    required: true,
                    minlength: 10
                },
                Description: {
                    required: true,
                },
                ImageHref: {
                    required: true,
                    url: true
                },
                RouteHref: {
                    required: true,
                }
            },
            messages: {
                Title: {
                    required: "Поле с заголовком должно быть заполненно",
                    minlength: "Заголовок не должен быть короче 10 символов"
                },
                Description: {
                    required: "Поле описания слайда должно быть заполненно",
                },
                ImageHref: {
                    required: "Поле с ссылкой на изображение должно быть заполненно",
                    url: "Поле должно содержать ссылку"
                },
                RouteHref: {
                    required: "Поле с внешней ссылко должно быть заполненно"
                }

            }
        });
    </script>

}