@using AutoService.WEB.Models
@model ServicesSummaryAdminView
<div class="card col-xl-10 col-md-10 col-sm-12 shadow-sm rounded p-0 mt-3 mb-3">
    <div class="row no-gutters">
        <div class="col-md-6">
            <img class="img-fluid" src="@Model.Car.CarImageHref" alt="Alternate Text" />
        </div>
        <div class="adminMenuOrderCase col-md-6 card-body p-2">
            <div>
                <i class="fa fa-user-circle p-1"></i><b>Пользователь:</b> <a href="mailto:@Model.User.UserName" style="color:black">@Model.User.UserName</a>
            </div>
            <div>
                <i class="fa fa-user mr-1 p-1"></i> <b>Имя:</b> @Model.User.RealName
            </div>
            <div>
                <i class="fa fa-phone mr-1 p-1"></i><b>Номер:</b>
                @if (Model.User.PhoneNumber != null)
                {
                @Model.User.PhoneNumber
                }
                else
                {
                <text>Нет</text>
                }
            </div>
            <div>
                <i class="fa fa-car mr-1 p-1"></i><b>Автомобиль: </b>@Model.Car.FullName
            </div>
            <div>
                <i class="fa fa-shopping-bag mr-1 p-1"></i> <b>Итоговая цена: </b> @Model.TotalPrice ₽
            </div>
            <div>
                <i class="fa fa-calendar mr-1 p-1"></i> <b>Дата работ: </b>@Model.Date.ToShortDateString()
            </div>
            <div class="card w-100 border-0 mt-2">
                <div class="card-header text-center font-weight-bold" style="background-color:#dbd7d2"><i class="fa fa-list p-1 mr-1"></i>Услуги</div>
                <div class="card-body pl-2">
                    <ol class="overflow-auto" style="max-height:300px">
                        @foreach (var service in Model.ServicesList)
                        {
                            <li>
                                @service.ToString()
                            </li>
                        }
                    </ol>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.IsCompleted)
    {
    <div class="text-right card-footer">
        <a href="@Url.Action("EditSummary","AdminMenu",new { SummaryId = Model.SummaryId})" class="btn btn-dark">
            <i class="p-1 mr-1 fa fa-gear fa-lg"></i>
            Изменить
        </a>
    </div>
    }
</div>