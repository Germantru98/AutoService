@using AutoService.WEB.Models

<div class="modal-content">
    <!-- Заголовок модального окна -->
    <div class="modal-header">
        <h5 class="modal-title">Вы уверенны, что хотите завершить данный заказ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!-- Основное содержимое модального окна -->
    <div class="modal-body d-flex">
        <img class="img-fluid mx-auto" width="350" height="350" src="https://vignette.wikia.nocookie.net/fallout/images/c/c0/VaultBoyFO3.png/revision/latest?cb=20110809182235" />
    </div>
    <!-- Футер модального окна -->
    <div class="modal-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <button class="btn btn-success" type="submit">
                    <i class="fa fa-check p-1 mr-1"></i>Завершить
                </button>
            </div>
        }
        <button type="button" class="btn btn-dark" data-dismiss="modal">Закрыть</button>
    </div>
</div>