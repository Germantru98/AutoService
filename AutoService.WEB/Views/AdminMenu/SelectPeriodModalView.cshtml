@using AutoService.WEB.Models
@model GetPeriodView
<div class="modal-content">
    <!-- Заголовок модального окна -->
    <div class="modal-header">
        <h5 class="modal-title">Выберите период</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!-- Основное содержимое модального окна -->
    @using (Ajax.BeginForm("GetOrdersByPeriod", "AdminMenu", null, new AjaxOptions { UpdateTargetId = "archiveResults" }))
    {
        <div class="modal-body p-2" style="font-size:18px">
            <div class="form-group text-center">
                <label><i class="fa fa-calendar-check-o fa-lg p-1"></i> Начало:</label><br />
                @Html.EditorFor(s => s.StartDate)
            </div>
            <div class="form-group text-center">
                <label><i class="fa fa-calendar-times-o fa-lg p-1"></i> Конец:</label><br />
                @Html.EditorFor(s => s.FinishDate)
            </div>
        </div>
        <!-- Футер модального окна -->
        <div class="modal-footer">
            <button class="btn btn-outline-dark" type="submit"><i class="mr-1 p-1 fa fa-send"></i>Подтвердить</button>
            <button type="button" class="btn btn-outline-dark" data-dismiss="modal"><i class="mr-1 p-1 fa fa-window-close-o"></i>Закрыть</button>
        </div>
    }
</div>