@using AutoService.WEB.Models
@model List<ServicesSummaryAdminView>

<div class="mt-3 p-2">
    <div class="btn-group">
        @Html.ActionLink("За период", "GetOrdersByPeriod", null, new { @class = "dialog btn btn-dark m-1" })
        <div class="m-1">
            @using (Ajax.BeginForm("GetAllCompletedOrders", new AjaxOptions { UpdateTargetId = "results" }))
            {
                <button class="btn btn-dark" type="submit">Все заказы</button>
            }
        </div>
        @Html.ActionLink("За период", "GetCompletedOrdersByDay", null, new { @class = "dialog btn btn-dark m-1" })
    </div>
    <div id="results">
        @Html.Partial("SummariesBlockView", Model)
    </div>
</div>