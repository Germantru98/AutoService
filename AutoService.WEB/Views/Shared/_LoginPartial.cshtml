@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <a href="@Url.Action("Index","Manage")" title="Аккаунт" class="btn btn-secondary m-1 btn-sm"><i class="fa fa-home mr-1 p-1"></i>Аккаунт</a>

        <a class="btn btn-secondary m-1 btn-sm" href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>

    }
}
else
{
    @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-secondary ml-2" })
    @Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = " btn btn-secondary  ml-2" })
}